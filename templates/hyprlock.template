# =======================================================================
#  BACKGROUND
# =======================================================================
background {
    monitor =
    path = ~/.config/wallpapers/earth.jpeg
    vibrancy = 0.17
}

# =======================================================================
#  AVATAR (Centered, above input)
# =======================================================================
image {
    monitor =
    path = ~/.config/hypr/avatar.jpg
    size = 240
    rounding = -1 # Circular
    border_size = 8
    border_color = __HYPRLOCK_ACCENT_BORDER__
    position = 0, 0
    halign = center
    valign = center
}


label {
    monitor =
    text = $TIME
    font_size = 82
    font_color = __HYPRLOCK_ACCENT_BORDER__
    halign = left
    valign = bottom
    position = 40, 40
}

label {
    monitor =
    text = cmd[update:18000000] echo "<b> "$(date +'%A, %-d %B %Y')" </b>"
    font_size = 24
    font_color = __HYPRLOCK_ACCENT_BORDER__
    halign = left
    valign = top
    position = 40, -20
    font_family = JetBrains Mono Nerd Font 10
}

# =======================================================================
#  INPUT FIELD & MESSAGES
# =======================================================================
input-field {
    monitor =
    size = 300, 50
    position = 0, -300
    halign = center
    valign = center
    border_size = 8
    border_color = __HYPRLOCK_ACCENT_BORDER__

    rounding = 25
    outline_thickness = 2
    dots_size = 0.2
    dots_center = true
    placeholder_text = <i>Password...</i>

    inner_color = __HYPRLOCK_INPUT_INNER__
    font_color = __HYPRLOCK_TEXT__
    outer_color = __HYPRLOCK_INPUT_OUTER__
    check_color = __HYPRLOCK_CHECK__
    fail_color = __HYPRLOCK_FAIL__
    fail_transition = 300
}

label {
    monitor =
    text = Hi there, $USER
    color = __HYPRLOCK_ACCENT_BORDER__
    font_size = 25
    position = 0, -200
    halign = center
    valign = center
}